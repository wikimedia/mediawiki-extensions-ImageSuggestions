{
	"manifest_version": 2,
	"name": "ImageSuggestions",
	"namemsg": "imagesuggestions-extensionname",
	"type": "other",
	"author": [
		"Cormac Parle",
		"Joseph Seddon",
		"Marco Fossati",
		"Matthias Mullie"
	],
	"version": "0.0.1",
	"url": "https://www.mediawiki.org/wiki/Extension:ImageSuggestions",
	"descriptionmsg": "imagesuggestions-desc",
	"license-name": "GPL-2.0-or-later",
	"requires": {
		"MediaWiki": ">= 1.45",
		"extensions": {
			"Echo": "*",
			"CirrusSearch": "*"
		}
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\ImageSuggestions\\": "includes/",
		"MediaWiki\\Extension\\ImageSuggestions\\Maintenance\\": "maintenance/"
	},
	"TestAutoloadNamespaces": {
		"MediaWiki\\Extension\\ImageSuggestions\\Tests\\MediaWiki\\": "tests/phpunit/"
	},
	"config": {
		"ImageSuggestionsSuggestionsApi": {
			"description": "API endpoint for image suggestions (required); 2 params will be sprintf'ed into the url: 1/ the wiki id & 2/ the page id. Example: 'http://<host>:<port>/public/image_suggestions/suggestions/%1$s/%2$d'. See https://www.mediawiki.org/wiki/Platform_Engineering_Team/Data_Value_Stream/Data_Gateway#Suggestions",
			"value": ""
		},
		"ImageSuggestionsInstanceOfApi": {
			"description": "API endpoint for instance of cache (required); 2 params will be sprintf'ed into the url: 1/ the wiki id & 2/ the page id. Example: 'http://<host>:<port>/private/image_suggestions/instanceof_cache/%1$s/%2$d'. See https://www.mediawiki.org/wiki/Platform_Engineering_Team/Data_Value_Stream/Data_Gateway#Instanceof_(cache)",
			"value": ""
		},
		"ImageSuggestionsHelpLink": {
			"description": "URL to per-wiki description pages",
			"value": ""
		}
	},
	"Hooks": {
		"BeforePageDisplay": "main",
		"EchoGetBundleRules": "main"
	},
	"HookHandlers": {
		"main": {
			"class": "MediaWiki\\Extension\\ImageSuggestions\\Hooks"
		}
	},
	"MessagesDirs": {
		"ImageSuggestions": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "ImageSuggestions/resources"
	},
	"ResourceModules": {
		"ext.imagesuggestions.notifications.styles": {
			"deprecated": "For cached HTML only",
			"dependencies": [
				"oojs-ui.styles.icons-media",
				"oojs-ui-core.icons"
			]
		}
	},
	"JobClasses": {
		"ImageSuggestionsNotifications": {
			"class": "MediaWiki\\Extension\\ImageSuggestions\\NotificationsJob",
			"services": [
				"ConfigFactory",
				"DBLoadBalancerFactory",
				"HttpRequestFactory",
				"JobQueueGroup",
				"MainConfig",
				"NamespaceInfo",
				"TitleFactory",
				"UserFactory",
				"UserOptionsLookup"
			],
			"needsPage": false
		}
	},
	"attributes": {
		"Echo": {
			"NotificationCategories": {
				"image-suggestions": {
					"priority": 3,
					"title": "echo-category-title-image-suggestions",
					"tooltip": "echo-pref-tooltip-image-suggestions"
				}
			},
			"Notifications": {
				"image-suggestions": {
					"category": "image-suggestions",
					"group": "positive",
					"section": "message",
					"user-locators": [
						"MediaWiki\\Extension\\Notifications\\UserLocator::locateEventAgent"
					],
					"canNotifyAgent": true,
					"presentation-model": "MediaWiki\\Extension\\ImageSuggestions\\ImageSuggestionsPresentationModel",
					"bundle": {
						"web": true,
						"email": true,
						"expandable": true
					}
				}
			},
			"NotificationIcons": {
				"image-suggestions-blue": {
					"path": "ImageSuggestions/modules/ImageSuggestions-placeholder-icon-blue.svg"
				}
			}
		}
	}
}
